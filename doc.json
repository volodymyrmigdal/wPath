{

  "tags" :
  {
    "allowUnknownTags" : true,
    "dictionaries" : [ "jsdoc","closure" ]
  },

    "plugins" :
    [
      "plugins/markdown",
      "plugins/summarize"
    ],

  "templates" :
  {

    "applicationName" : "applicationName",
    "disqus" : "disqus",
    "googleAnalytics" : "googleAnalytics",

    "meta" :
    {
      "title" : "title",
      "description" : "description",
      "keyword" : "keyword"
    },

    "linenums" : true

  },

  "opts" :
  {
    "encoding" : "utf8",
    "destination" : "./doc/reference",
    "recurse" : true
  },

  "source" :
  {

    "includePattern" : ".+\\.(js|ss|s)(doc)?$",
    "excludePattern" : "(^|\\\/)(\\\\.|-|node_modules|shared|3rd|old|external)",

    "include" :
    [
      "./server",
      "./staging"
    ]

  }

}
